<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="utf-8">
  <title><%= post ? 'Bewerk' : 'Nieuw' %> bericht</title>

  <!-- CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css">
  <style>.EasyMDEContainer{border-radius:.375rem;overflow:hidden;}</style>
</head>

<body class="container py-5">
  <%- include('partials/admin-header') %>

  <h1 class="mb-4"><%= post ? 'Bewerk' : 'Maak nieuw' %> bericht</h1>

  <form id="postForm" class="vstack gap-4">

    <!-- ───── TITEL ─────────────────────────────────────────────── -->
    <div>
      <label class="form-label fw-semibold">Titel</label>
      <input class="form-control" name="title" placeholder="Artikel­titel"
             value="<%= post ? post.title : '' %>" required>
    </div>

    <!-- ───── SLUG ──────────────────────────────────────────────── -->
    <div>
      <label class="form-label fw-semibold">Slug (URL)</label>
      <input class="form-control" name="slug" placeholder="voorbeeld-van-een-slug"
             value="<%= post ? post.slug : '' %>"
             required pattern="^[a-z0-9-]+$">
      <div class="form-text">Alleen kleine letters, cijfers en koppeltekens (-).</div>
    </div>

    <!-- ───── CATEGORIE ─────────────────────────────────────────── -->
    <div>
      <label class="form-label fw-semibold">Categorie</label>
      <% const cat = post ? post.category : 'news'; %>
      <select class="form-select" name="category">
        <option value="news"    <%= cat==='news'    ? 'selected' : '' %>>Nieuws</option>
        <option value="service" <%= cat==='service' ? 'selected' : '' %>>Behandelingen</option>
        <option value="tips"    <%= cat==='tips'    ? 'selected' : '' %>>Tips</option>
      </select>
    </div>

    <!-- ───── MARKDOWN (EasyMDE) ────────────────────────────────── -->
    <div>
      <label class="form-label fw-semibold">Inhoud (Markdown)</label>
      <textarea id="editor" name="content_md"><%= post ? post.content_md : '' %></textarea>
    </div>

    <!-- ───── SAMENVATTING ──────────────────────────────────────── -->
    <div>
      <label class="form-label fw-semibold">Samenvatting (optioneel)</label>
      <textarea class="form-control" rows="3" name="excerpt"
                placeholder="Korte samenvatting voor op de kaarten"><%= post ? post.excerpt : '' %></textarea>
    </div>

    <!-- ───── KAARTAFBEELDING ───────────────────────────────────── -->
    <div>
      <label class="form-label fw-semibold">Uitgelichte afbeelding (kaart)</label>
      <input type="file" id="cardInput" accept="image/*" class="form-control">
      <input type="hidden" name="image_url" value="<%= post ? post.image_url : '' %>">
      <img id="cardPreview"
           src="<%= post && post.image_url ? post.image_url : '' %>"
           style="max-width:220px;<%= post && post.image_url ? '' : 'display:none' %>;margin-top:.75rem;">
    </div>

    <!-- ───── HEROAFBEELDING ────────────────────────────────────── -->
    <div>
      <label class="form-label fw-semibold">Hero-afbeelding (banner 1280×720)</label>
      <input type="file" id="heroInput" accept="image/*" class="form-control">
      <input type="hidden" name="hero_url" value="<%= post ? post.hero_url : '' %>">
      <img id="heroPreview"
           src="<%= post && post.hero_url ? post.hero_url : '' %>"
           style="max-width:220px;<%= post && post.hero_url ? '' : 'display:none' %>;margin-top:.75rem;">
      <div class="form-text">Optioneel. Als dit leeg blijft, valt de banner terug op de uitgelichte afbeelding.</div>
    </div>

    <!-- ───── HERO-POSITIE (hero_pos) ───────────────────────────── -->
    <div>
      <label class="form-label fw-semibold d-block">Verticale focus van de hero-afbeelding</label>
      <% const heroPos = (post && post.hero_pos) ? post.hero_pos : 'center'; %>
      <div class="btn-group" role="group" aria-label="Hero-positie">
        <input type="radio" class="btn-check" name="hero_pos" id="posTop" value="top"
               <%= heroPos === 'top' ? 'checked' : '' %>>
        <label class="btn btn-outline-secondary" for="posTop">Boven</label>

        <input type="radio" class="btn-check" name="hero_pos" id="posCenter" value="center"
               <%= heroPos === 'center' ? 'checked' : '' %>>
        <label class="btn btn-outline-secondary" for="posCenter">Midden</label>

        <input type="radio" class="btn-check" name="hero_pos" id="posBottom" value="bottom"
               <%= heroPos === 'bottom' ? 'checked' : '' %>>
        <label class="btn btn-outline-secondary" for="posBottom">Onder</label>
      </div>
      <div class="form-text">Bepaalt welk deel zichtbaar blijft op smalle/hoge schermen.</div>
    </div>

    <!-- ───── PUBLICATIE ────────────────────────────────────────── -->
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox"
             name="published" value="1" id="pubSwitch"
             <%= post && post.published ? 'checked' : '' %>>
      <label class="form-check-label fw-semibold" for="pubSwitch">Gepubliceerd</label>
    </div>

    <!-- ───── UITGELICHT ────────────────────────────────────────── -->
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" name="featured" value="1"
             id="featSwitch" <%= post && post.featured ? 'checked' : '' %>>
      <label class="form-check-label fw-semibold" for="featSwitch">
        Uitgelicht op homepage
      </label>
    </div>

    <!-- ───── KNOPPEN ───────────────────────────────────────────── -->
    <div>
      <button class="btn btn-primary">Opslaan</button>
      <% if (post) { %>
        <button id="deleteBtn" type="button" class="btn btn-danger ms-2">Verwijderen</button>
      <% } %>
    </div>
  </form>

  <hr class="my-5">
  <h2 class="mb-3">Alle berichten</h2>
  <ul id="postList" class="list-group"></ul>

  <!-- ───── SCRIPTS ─────────────────────────────────────────────── -->
  <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
  <script type="module">
    /* ---------- EasyMDE met “afbeelding invoegen” ---------- */
    const easyMDE = new EasyMDE({
      element     : document.getElementById('editor'),
      spellChecker: false,
      status      : false,
      placeholder : 'Begin met schrijven…',
      toolbar: [
        'bold','italic','heading','|',
        'unordered-list','ordered-list','|',
        {
          name     : 'insert-image',
          className: 'fa fa-picture-o',
          title    : 'Afbeelding uploaden & invoegen',
          action   : async editor => {
            const picker = document.createElement('input');
            picker.type  = 'file';
            picker.accept= 'image/*';
            picker.onchange = async () => {
              if (!picker.files.length) return;
              const fd = new FormData();
              fd.append('file', picker.files[0]);
              const r = await fetch('/admin/upload-inline',{method:'POST',body:fd});
              if (!r.ok){ alert('Upload mislukt'); return; }
              const { url } = await r.json();   // {url:"/uploads/…"}
              const cm = editor.codemirror;
              const pos= cm.getCursor();
              cm.replaceRange(`![](${url})\n`, pos);
            };
            picker.click();
          }
        },
        '|','preview','side-by-side','fullscreen','|','guide'
      ]
    });

    const qs = s => document.querySelector(s);

    /* ---------- helper: upload card/hero ---------- */
    async function doUpload (file) {
      const fd = new FormData(); fd.append('file', file);
      const r  = await fetch('/admin/upload', { method:'POST', body:fd });
      if (!r.ok) throw new Error('Upload mislukt');
      return await r.json();    // { basename, hero, card }
    }

    /* ---------- KAART-afbeelding ---------- */
    qs('#cardInput')?.addEventListener('change', async e => {
      if (!e.target.files.length) return;
      try{
        const { card } = await doUpload(e.target.files[0]);
        qs('[name=image_url]').value   = card;
        qs('#cardPreview').src         = card;
        qs('#cardPreview').style.display='block';
      }catch(err){ alert(err.message); }
    });

    /* ---------- HERO-afbeelding ---------- */
    qs('#heroInput')?.addEventListener('change', async e => {
      if (!e.target.files.length) return;
      try{
        const { hero } = await doUpload(e.target.files[0]);
        qs('[name=hero_url]').value    = hero;
        qs('#heroPreview').src         = hero;
        qs('#heroPreview').style.display='block';
      }catch(err){ alert(err.message); }
    });

    /* ---------- Opslaan ---------- */
    qs('#postForm').addEventListener('submit', async e => {
      e.preventDefault();
      qs('[name="content_md"]').value = easyMDE.value();
      const data = Object.fromEntries(new FormData(e.target));
      data.published = data.published ? 1 : 0;
      data.featured  = data.featured  ? 1 : 0;
      if (!data.hero_pos) data.hero_pos = 'center';   // default

      const r = await fetch('/admin/save',{
        method : 'POST',
        headers: {'Content-Type':'application/json'},
        body   : JSON.stringify(data)
      });
      if (r.ok) { alert('Opgeslagen ✔︎'); location.reload(); }
      else      { alert('Opslaan mislukt'); }
    });

    /* ---------- Verwijderen ---------- */
    <% if (post) { %>
    qs('#deleteBtn')?.addEventListener('click', async () => {
      if (!confirm('Dit bericht verwijderen?')) return;
      await fetch('/admin/<%= post.slug %>', { method:'DELETE' });
      location.href = '/admin';
    });
    <% } %>

    /* ---------- Lijst met berichten ---------- */
    async function loadList(){
      const r = await fetch('/api/posts');
      const posts = await r.json();
      document.getElementById('postList').innerHTML =
        posts.map(p => `
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/admin/${p.slug}">${p.title}</a>
            <span class="badge bg-${p.published ? 'success' : 'secondary'}">
              ${p.published ? 'live' : 'concept'}
            </span>
          </li>
        `).join('');
    }
    loadList();
  </script>
</body>
</html>
