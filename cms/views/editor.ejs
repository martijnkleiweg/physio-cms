<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= post ? 'Edit' : 'New' %> Post</title>

  <!-- CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://unpkg.com/easymde/dist/easymde.min.css"        rel="stylesheet">
  <style>
    .EasyMDEContainer{border-radius:.375rem;overflow:hidden}
    img.preview     {max-width:220px;margin-top:.75rem}
  </style>
</head>
<body class="container py-5">

  <h1 class="mb-4"><%= post ? 'Edit' : 'Create' %> Post</h1>

  <!-- =========================  EDITOR FORM  ========================= -->
  <form id="postForm" class="vstack gap-4">

    <!-- TITLE -->
    <div>
      <label class="form-label fw-semibold">Title</label>
      <input class="form-control" name="title" required
             placeholder="Article title"
             value="<%= post?.title || '' %>">
    </div>

    <!-- SLUG -->
    <div>
      <label class="form-label fw-semibold">Slug (URL)</label>
      <input class="form-control" name="slug" required pattern="^[a-z0-9-]+$"
             placeholder="slug-my-post"
             value="<%= post?.slug || '' %>">
      <div class="form-text">Lower‑case letters, numbers and dashes only.</div>
    </div>

    <!-- CATEGORY -->
    <div>
      <label class="form-label fw-semibold">Category</label>
      <% const cat = post?.category || 'news'; %>
      <select class="form-select" name="category">
        <option value="news"    <%= cat==='news'    && 'selected' %>>News</option>
        <option value="service" <%= cat==='service' && 'selected' %>>Service</option>
        <option value="tips"    <%= cat==='tips'    && 'selected' %>>Tips</option>
      </select>
    </div>

    <!-- MARKDOWN (EasyMDE) -->
    <div>
      <label class="form-label fw-semibold">Content (Markdown)</label>
      <textarea id="editor" name="content_md"><%= post?.content_md || '' %></textarea>
    </div>

    <!-- EXCERPT -->
    <div>
      <label class="form-label fw-semibold">Excerpt (optional)</label>
      <textarea class="form-control" name="excerpt" rows="3"
                placeholder="Short summary shown on cards"><%= post?.excerpt || '' %></textarea>
    </div>

    <!-- CARD IMAGE -->
    <div>
      <label class="form-label fw-semibold">Featured image (card 400 × 250)</label>
      <input id="cardInput" type="file" accept="image/*" class="form-control">
      <input type="hidden" name="image_url" value="<%= post?.image_url || '' %>">
      <img id="cardPreview" class="preview"
           src="<%= post?.image_url || '' %>"
           style="<%= post?.image_url ? '' : 'display:none' %>">
    </div>

    <!-- HERO IMAGE -->
    <div>
      <label class="form-label fw-semibold">Hero image (banner 1280 × 720)</label>
      <input id="heroInput" type="file" accept="image/*" class="form-control">
      <input type="hidden" name="hero_url" value="<%= post?.hero_url || '' %>">
      <img id="heroPreview" class="preview"
           src="<%= post?.hero_url || '' %>"
           style="<%= post?.hero_url ? '' : 'display:none' %>">
      <div class="form-text">Optional. If empty, the banner falls back to the featured image.</div>
    </div>

    <!-- PUBLISH SWITCH -->
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" id="pubSwitch"
             name="published" value="1" <%= post?.published ? 'checked' : '' %>>
      <label for="pubSwitch" class="form-check-label fw-semibold">Published</label>
    </div>

    <!-- BUTTONS -->
    <div>
      <button class="btn btn-primary">Save</button>
      <% if (post) { %>
        <button id="deleteBtn" type="button" class="btn btn-danger ms-2">Delete</button>
      <% } %>
    </div>
  </form>

  <!-- =========================  POST LIST  ========================== -->
  <hr class="my-5">
  <h2 class="mb-3">All Posts</h2>
  <ul id="postList" class="list-group"></ul>

  <!-- =========================  SCRIPTS  ============================ -->
  <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
  <script type="module">
    /* ---------- EasyMDE ---------- */
    const easyMDE = new EasyMDE({
      element     : document.getElementById('editor'),
      spellChecker: false,
      status      : false,
      placeholder : 'Start writing…'
    });

    const qs = sel => document.querySelector(sel);

    /* ---------- helper: upload & resize on server ---------- */
    async function uploadAndGetURLs(file){
      const fd = new FormData(); fd.append('file', file);
      const r  = await fetch('/admin/upload', { method:'POST', body: fd });
      if(!r.ok) throw new Error('Upload failed');
      return await r.json();                  // { basename, hero, card }
    }

    /* ---------- CARD image ---------- */
    qs('#cardInput')?.addEventListener('change', async e=>{
      const file = e.target.files?.[0]; if(!file) return;
      try{
        const { card } = await uploadAndGetURLs(file);
        qs('[name=image_url]').value = card;
        const prev = qs('#cardPreview'); prev.src = card; prev.style.display='';
      }catch(err){ alert(err.message); }
    });

    /* ---------- HERO image ---------- */
    qs('#heroInput')?.addEventListener('change', async e=>{
      const file = e.target.files?.[0]; if(!file) return;
      try{
        const { hero } = await uploadAndGetURLs(file);
        qs('[name=hero_url]').value = hero;
        const prev = qs('#heroPreview'); prev.src = hero; prev.style.display='';
      }catch(err){ alert(err.message); }
    });

    /* ---------- SAVE ---------- */
    qs('#postForm').addEventListener('submit', async ev=>{
      ev.preventDefault();
      qs('[name=content_md]').value = easyMDE.value();          // sync editor
      const data = Object.fromEntries(new FormData(ev.target));
      data.published = data.published ? 1 : 0;

      const r = await fetch('/admin/save', {
        method :'POST',
        headers:{'Content-Type':'application/json'},
        body   : JSON.stringify(data)
      });
      if(r.ok){ alert('Saved ✔︎'); location.reload(); }
      else     { alert('Save failed'); }
    });

    /* ---------- DELETE ---------- */
    <% if (post) { %>
    qs('#deleteBtn')?.addEventListener('click', async ()=>{
      if(!confirm('Delete this post?')) return;
      await fetch('/admin/<%= post.slug %>', { method:'DELETE' });
      location.href = '/admin';
    });
    <% } %>

    /* ---------- LIST OF POSTS ---------- */
    async function loadList(){
      const r = await fetch('/api/posts'); const posts = await r.json();
      qs('#postList').innerHTML = posts.map(p=>`
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a href="/admin/${p.slug}">${p.title}</a>
          <span class="badge bg-${p.published?'success':'secondary'}">${p.published?'live':'draft'}</span>
        </li>`).join('');
    }
    loadList();
  </script>
</body>
</html>
